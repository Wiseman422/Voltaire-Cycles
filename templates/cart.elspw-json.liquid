{% layout none %}{% capture output %}
{
"total_price" : <span id="revy-cart-subtotal-price">{{cart.total_price}}</span>,
"attributes": {{cart.attributes | json}},
"items" : [
{% for item in cart.items %}
{
"id": {{item.id}},
"title": {{item.title | json}},
"product": { "id":{{item.product_id}}, "handle":"{{item.product.handle}}", "title":{{item.product.title | json}},"tags":{{item.product.tags | json}}},
"quantity": {{item.quantity}},
"properties": {{item.properties | json}},
"price": "{{item.price}}"
}{% unless forloop.last %},{% endunless %}
{% endfor %}
]
}{% endcapture %}{{ output | strip_newlines }}