{% capture footer_social_links %}
  {% include 'social_networks' %}
{% endcapture %}

{% if footer_social_links != blank %}
  <section class="footer__module footer-social" {{ block.shopify_attributes }}>
    <h3 class="footer__title">{{ 'layout.footer.social_title' | t }}</h3>

    <ul class="footer__social list--unstyled">
      {{ footer_social_links }}
    </ul>
  </section>
{% endif %}